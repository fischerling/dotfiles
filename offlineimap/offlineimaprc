# offlineimap config file

[general]
accounts = FAUMail,MUHQ
maxsyncaccounts = 2

[Account FAUMail]
localrepository = LocalFAU
remoterepository = FAU

autorefresh=1
quick=10

[Account MUHQ]
localrepository=LocalMUHQ
remoterepository=MUHQ

autorefresh=1
quick=10

[Repository FAU]
type = IMAP
remotehost = faumail.uni-erlangen.de
remoteport = 993
remoteuser = aj46ezos
remotepassfile = $DOTFILES_LOCATION/decrypted/FAU.IMAP.PASS
ssl=yes
cert_fingerprint = BB9EE687E92693794C752F57C53483076DEF2755
newmail_hook = lambda: __import__("os").system("i3-nagbar -m \"new mail in FAU\" > /dev/null 2>&1 &")


[Repository LocalFAU]
type = Maildir
localfolders = ~/Mail/FAU/

[Repository MUHQ]
type = IMAP
remotehost = antares.uberspace.de
remoteport = 993
remoteuser = muhq
remotepassfile = $DOTFILES_LOCATION/decrypted/MUHQ.IMAP.PASS
ssl=yes
cert_fingerprint = B53A1586456E35E454DA3581980330903753AD3E
newmail_hook = lambda: __import__("os").system("i3-nagbar -m \"new mail in MUHQ\" > /dev/null 2>&1 &")

[Repository LocalMUHQ]
type = Maildir
localfolders = ~/Mail/MUHQ/
