# Sample minimal config file.  Copy this to ~/.offlineimaprc and edit to
# get started fast.

[general]
accounts = FAUMail

[Account FAUMail]
localrepository = Local
remoterepository = Remote

[Repository Local]
type = Maildir
localfolders = ~/Mail

[Repository Remote]
type = IMAP
remotehost = faumail.uni-erlangen.de
remoteport = 993
remoteuser = aj46ezos
remotepassfile = $DOTFILES_LOCATION/decrypted/FAU.IMAP.PASS

ssl=yes
cert_fingerprint = BB9EE687E92693794C752F57C53483076DEF2755

holdconnectionopen = yes
keepalive = 180
